<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title FINKI Travel </title>
    <link href="@Url.Content("~/Content/MyStyles.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/font-awesome.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color: antiquewhite;
        }

        footer {
            color: white;
            background-color: black;
            font-style: italic;
        }

        .fa {
            font-size: 170%;
        }

        body {
            font-style: italic;
            font-family: 'Arial Rounded MT';
        }

        .navbar {
            text-align: center;
            font-weight: bolder;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FINKI Travel Agency", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav ">

                    <li class="text-info">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="text-info">@Html.ActionLink("Offers", "Index", "Aranzman")</li>
                    <li class="text-info">@Html.ActionLink("Destinations", "Index", "Destinations")</li>
                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="text-info">@Html.ActionLink("Add User To Role", "AddUserToRole", "Account")</li>
                    }

                    <li class="text-info">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>

    @RenderBody()

    <div class="container-fluid ">
        <div id="map" style="width:100%; height:500px">

        </div>
    </div>
    <footer class="py-5 bg-dark">
        <div class="container text-center">
            <h4><strong>FINKI Travel Agency</strong></h4>
            <p>"Rugjer Boskovikj" 16</p>
            <p>1000 Skopje, Republic of Macedonia</p>
            <p>       <i class="fa fa-phone" aria-hidden="true"></i>  (389) 123-4567</p>
            <p>   <div class="fa fa-envelope"></div> <a href=""> finkitravel@finki.ukim.mk</a></p>


        </div>
        <!-- /.container -->
    </footer>
    <script>
        function initMap() {
            var location = { lat: 42.004175, lng: 21.409609 };
            var map = new google.maps.Map(document.getElementById("map"),
                {
                    zoom: 18,
                    center: location
                }
            );

            var marker = new google.maps.Marker({
                position: location,
                map: map
            });

        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAbZRIwOcpXxYUlB_6kiNQRPpTxvesWwzA&callback=initMap"
            type="text/javascript"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap.min.js")

    @RenderSection("scripts", required: false)
</body>
</html>